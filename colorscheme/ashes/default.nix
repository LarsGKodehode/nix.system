# Ashes color scheme
# Base16 colors from official Ashes scheme

{
  name = "ashes";
  author = "Glitchbone (adrien@glitchbone.com)";
  theme = {
    base00 = "#1C2023"; # Background
    base01 = "#2C3033"; # Lighter background variant (interpolated)
    base02 = "#3C4043"; # Selection background (interpolated)
    base03 = "#747C84"; # Comments, invisibles (bright black)
    base04 = "#747C84"; # Dark foreground (disabled, same as base03 in Ashes)
    base05 = "#C7CCD1"; # Default foreground
    base06 = "#C7CCD1"; # Light foreground (same as base05 in Ashes)
    base07 = "#F3F4F5"; # Lightest foreground (bright white)
    base08 = "#C7AE95"; # Red
    base09 = "#C7AE95"; # Orange (same as red in Ashes)
    base0A = "#AEC795"; # Yellow
    base0B = "#95C7AE"; # Green
    base0C = "#95AEC7"; # Cyan
    base0D = "#AE95C7"; # Blue
    base0E = "#C795AE"; # Purple/Magenta
    base0F = "#747C84"; # Brown/Extra (same as base03 in Ashes)
    batTheme = "default"; # bat doesn't have an ashes theme, using default
  };
}
